{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "rawdata",
						"type": "DatasetReference"
					},
					"name": "readrawdata"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "transform_data",
						"type": "DatasetReference"
					},
					"name": "transformdata",
					"description": "Add sink dataset into load table"
				}
			],
			"transformations": [
				{
					"name": "filtersalesdata"
				},
				{
					"name": "aggdatausinggrpby",
					"description": "Add aggregate columns group by month and year"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ORDERNUMBER as string,",
				"          QUANTITYORDERED as string,",
				"          PRICEEACH as string,",
				"          ORDERLINENUMBER as string,",
				"          SALES as integer,",
				"          ORDERDATE as string,",
				"          STATUS as string,",
				"          QTR_ID as string,",
				"          MONTH_ID as string,",
				"          YEAR_ID as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> readrawdata",
				"readrawdata filter(SALES>=1500) ~> filtersalesdata",
				"filtersalesdata aggregate(groupBy(MONTH_ID,",
				"          YEAR_ID),",
				"     {total-sales} = sum(SALES)) ~> aggdatausinggrpby",
				"aggdatausinggrpby sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> transformdata"
			]
		}
	}
}